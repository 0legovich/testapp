<%= form_for @order, html: {multipart: true} do |f| %>
  <p>
    <%= f.label :user_name %><br>
    <%= f.text_field :user_name, required: true, autofocus: true %>
  </p>
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
