<div>
  <%= form_for [@category, @item] do |f| %>
    <p>
    <%= f.label 'Наименование товара' %><br />
    <%= f.text_field :name %>
    </p>
    <p>
    <%= f.label 'Цена' %><br />
    <%= f.text_field :price %>
    </p>
    <p>
    <%= f.label 'Вес' %><br />
    <%= f.text_field :weight %>
    </p>
    <p>
    <%= f.submit 'Сохранить товар' %> или <%= link_to 'вернуться', :back %>
    </p>
  <% end %>
</div>
